@page
@model WebAppRazor.Pages.Cursos.CrearModel
@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<div class="card">
    <div class="card-header">
        <h2 class="text">Crear nuevo curso</h2>
    </div>
    <div class="card-body">
       <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="container" style="padding:30px">
               <div class="form-group">
                   <div class="row">
                       <div class="col-sm-2">
                           <label asp-for="Curso.NameCourse"></label>
                       </div>
                       <div class="col-sm-6">
                           <input asp-for="Curso.NameCourse" class="form-control" />
                       </div>
                       <span asp-validation-for="Curso.NameCourse" class="text-danger"></span>
                   </div>
               </div>

               <div class="form-group">
                   <div class="row">
                       <div class="col-sm-2">
                           <label asp-for="Curso.CountClass"></label>
                       </div>
                       <div class="col-sm-6">
                           <input asp-for="Curso.CountClass" class="form-control" />
                       </div>
                       <span asp-validation-for="Curso.CountClass" class="text-danger"></span>
                   </div>
               </div>

               <div class="form-group">
                   <div class="row">
                       <div class="col-sm-2">
                           <label asp-for="Curso.Price"></label>
                       </div>
                       <div class="col-sm-6">
                           <input asp-for="Curso.Price" class="form-control" />
                       </div>
                       <span asp-validation-for="Curso.Price" class="text-danger"></span>
                   </div>
               </div>

               <div class="form-group">
                   <div class="row">
                       <div class="col-sm-2 offset-sm-2">
                           <input type="submit" value="Crear" class="btn btn-primary form-control" />
                       </div>
                       <div class="col-sm-4">
                           <a asp-page="Index" class="btn btn-success form-control">
                               Volver a la lista
                           </a>
                       </div>
                   </div>
               </div>
           </div>
       </form>
    </div>
</div>

